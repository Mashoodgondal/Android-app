<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#951ECAE0"
    tools:context=".HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_fragment"
        android:textSize="25sp"
        android:textColor="#0528E6"
        android:gravity="center"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/btnChatGPT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open ChatGPT"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>

    <!-- WebView to display ChatGPT inside the app -->
    <WebView
        android:id="@+id/webViewChatGPT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginBottom="70dp"
    android:layout_below="@id/btnChatGPT"/>
</FrameLayout>
